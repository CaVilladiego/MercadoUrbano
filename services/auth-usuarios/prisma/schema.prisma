generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String
  PrimerNombre  String
  SegundoNombre String?
  Apellido      String
  Telefono      String
  Rol           Role      @default(Cliente)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  addresses     Address[]
  Tiendas       Store[]
}

model Address {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  Direccion    String
  Ciudad       String
  Departamento String
  Pais         String
  CodigoPostal String?
  Referencia   String?
  isPrimary    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Store {
  id            String   @id @default(uuid())
  ownerId       String
  name          String
  telefono      String
  email         String?
  description   String?
  direccion     String   @default("")   // valor por defecto
  ciudad        String   @default("")
  departamento  String   @default("")
  pais          String   @default("")
  codigoPostal  String?  // puede ser null
  referencia    String?  // puede ser null
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  owner User @relation(fields: [ownerId], references: [id])
}


enum Role {
  Cliente
  Vendedor
  Administrador
}
