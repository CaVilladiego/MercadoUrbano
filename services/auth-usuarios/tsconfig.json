{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["core/domain/*"],
      "@app/*": ["core/application/*"],
      "@infra/*": ["infrastructure/*"],
      "@interface/*": ["interface/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src", "test"],   
  "exclude": ["node_modules", "dist"]
}
